@model  List<RecipeSite.Models.RecipeListViewModel>

<div id="recipeList">
    @foreach (var item in Model)
    {
        <div>
            <h4>@item.Name</h4>
            <div>
                @item.Description
                @*@item.CountOfReviews*@
            </div>
            <hr />
        </div>
    }
</div>