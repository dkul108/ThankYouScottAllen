﻿@model IPagedList<RecipeListViewModel>


<div id="recipeList">
    <div class="pagedList" data-rs-target="#recipeList">
        @Html.PagedListPager(Model, page => Url.Action("Index", new
   {
       page
       
   }),
       PagedListRenderOptions.MinimalWithItemCountText)
    </div>


    @foreach (var item in Model)
    {
        <div>
            <h4>@item.Name</h4>
            <div>
                @item.Description
            </div>
            <div>
                Reviews: @item.CountOfReviews
            </div>
            <hr />
        </div>
    }
</div>
 